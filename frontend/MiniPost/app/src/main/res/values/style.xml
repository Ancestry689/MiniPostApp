<?xml version="1.0" encoding="utf-8"?>
<!-- res/values/styles.xml -->
<resources>
    <!-- 定义自定义主题 -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- 设置底部导航栏背景颜色 -->
        <item name="bottomNavigationStyle">@style/BottomNavigationStyle</item>
    </style>

    <!-- 定义底部导航栏样式 -->
    <style name="BottomNavigationStyle" parent="Widget.Design.BottomNavigationView">
        <!-- 设置背景颜色 -->
        <item name="android:background">@color/white</item>
        <!-- 设置选中和未选中文字颜色 -->
        <item name="itemTextColor">@color/bottom_nav_text_color</item>
        <item name="itemIconTint">@color/bottom_nav_text_color</item>
    </style>
</resources>